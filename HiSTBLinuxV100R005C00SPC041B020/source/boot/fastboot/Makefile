	@echo "CFG_REG_START  = 64"   > platform.mk
	@echo "CFG_REG_LENGTH = 8192"  >> platform.mk
	@echo "CFG_REG_END    = 8256"  >> platform.mk
	@$(MKCONFIG) $(@:_config=) arm hi3798mx hi3798mx

