	@echo "CFG_REG_START  = 576"   > platform.mk
	@echo "CFG_REG_LENGTH = 8192"  >> platform.mk
	@echo "CFG_REG_END    = 8768"  >> platform.mk
	@$(MKCONFIG) $(@:_config=) arm s40 s40

